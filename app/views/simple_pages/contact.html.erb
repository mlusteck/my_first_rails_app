<%= render 'shared/decoration_string' %>
<section class="featured-section">
  <h1>Contact Us</h1>

  <%= flash[:notice] %>

  <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true, class: "contact-form") do |form| %>
  <div class="form-group">
    <%= form.label :name, "Name*" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Name", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :email, "Email*" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter Email", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :message, "Message*" %>
    <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5, required: true %>
  </div>
  <%= form.submit "Send", class: "btn btn-primary" %>
  <% end %>  </section>
<%= render 'shared/decoration_string' %>
