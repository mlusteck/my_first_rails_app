<section class="container all-products">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>

  <table class="products-table">
    <colgroup>
      <col class="name-col" />
      <col class="description-col" />
      <col class="image-url-col" />
    </colgroup>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image url</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.image_url %></td>
          <td><%= product.color %></td>
          <td><%= link_to 'Show', product, class: "edit-link" %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: "edit-link"%></td>
          <td><%= link_to 'Destroy', product, class: "edit-link",
                           method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path, class: "edit-link" %>
</section>
