<section class="container show-product">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product), class: "edit-link" %> |
  <%= link_to 'Back', products_path, class: "edit-link" %>
</section>
