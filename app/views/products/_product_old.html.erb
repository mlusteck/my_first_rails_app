<%# # partial for displaying product, local variable: product %>

<div class="col-12 col-sm-6 col-md-4 col-lg-3">
  <div class="product-card-outer">
    <div class="product-card">
      <hr />
      <%= product_linked_image product, product %>
      <h3><%= link_to product.name, product %></h3>
      <hr />
      <p><%= product.description %></p>
      <p>Colour: <%= product.colour %></p>
    </div><!-- end product-card -->
    <div class="product-card-bottom">
      <div class="price">
        <%= number_to_currency(product.price) %>
      </div>
      <hr />

      <p>
        <%= button_to "Order!", orders_path,  method: :create, params: { order: { user_id: current_user, product_id: product, total: product.price} }, class: "btn btn-primary"  %>
        <%= link_to 'Show', product, class: "edit-link" %> &bull;
        <%= link_to 'Edit', edit_product_path(product), class: "edit-link"%> &bull;
        <%= link_to 'Destroy', product, class: "edit-link",
                         method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
    </div><!-- end product-card-bottom -->
  </div><!-- end product-card-outer -->
</div><!-- end col -->
