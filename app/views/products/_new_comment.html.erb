<% if signed_in? %>
  <hr />
  <h4>Add a review:</h4>
  <%= form_with( model: [@product, @product.comments.build], local: true) do |f| %>
    <p class="rating"></p>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class:"form-control" %>
    </p>
    <p>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </p>
  <% end %>
<% end %>
